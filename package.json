{
  "name": "hive-tx",
  "version": "7.0.0-beta.3",
  "description": "Create, sign, and broadcast transactions on Hive blockchain",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "default": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "prepublishOnly": "npm run build",
    "build:node": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:browser": "webpack --mode=production",
    "build:clean": "rm -rf dist",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "test": "npm run build:node && node dist/tests/test.js"
  },
  "keywords": [
    "hive",
    "tx",
    "transaction",
    "sign",
    "broadcast",
    "blockchain",
    "hive-tx"
  ],
  "author": "Mahdi Yari",
  "license": "MIT",
  "dependencies": {
    "@noble/ciphers": "^2.0.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "bs58": "6.0.0",
    "ofetch": "^1.5.1"
  },
  "homepage": "https://github.com/mahdiyari/hive-tx-js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahdiyari/hive-tx-js.git"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
