{
  "name": "hive-tx",
  "version": "7.0.0-beta.5",
  "description": "A complete TypeScript SDK for Hive blockchain operations. Create, sign, and broadcast transactions with full type safety, cryptographic utilities, and serialization support.",
  "author": "Mahdi Yari",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/browser/hive-tx.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:node && npm run build:browser",
    "build:node": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:browser": "webpack",
    "build:clean": "rm -rf dist",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "test": "npm run build:node && tsx tests/test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hive",
    "blockchain",
    "transaction",
    "sign",
    "broadcast",
    "crypto",
    "web3"
  ],
  "homepage": "https://github.com/mahdiyari/hive-tx-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahdiyari/hive-tx-js.git"
  },
  "bugs": {
    "url": "https://github.com/mahdiyari/hive-tx-js/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@noble/ciphers": "^2.0.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "bs58": "6.0.0",
    "ofetch": "^1.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "pg": "^8.16.3",
    "prettier": "^3.7.1",
    "ts-loader": "^9.5.4",
    "tsdown": "^0.16.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
